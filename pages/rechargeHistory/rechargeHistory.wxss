.list-main {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.title {
  position: relative;
  display: inline-block;
  font-size: 40rpx;
  padding: 0 10px;
  margin-top: 12px;
  color: #606266;
  font-weight: 600;
}

.list-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 20px 0;
  padding: 10px;
  background-color: #fff;
  color: #333;
}

.item-title {
  font-size: 14px;
  color: rgb(136, 134, 134);
}

.status {
  width: 50px;
  height: 50px;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.status-box {
  display: flex;
  flex-wrap: wrap;
  padding: 0 10px;
  align-items: center;
}
.search{
  width: 100%;
}

.status-text {
  padding: 4px 8px;
  background-color: #fff;
  margin-left: 8px;
  border-radius: 5px;
  font-size: 16px;
  color: #333;
}

.selected {
  background-color: #ea5b5b;
  color: #fff;
}

.red,.green {
  color: red;
  font-size: 18px;
  font-weight: bold;
  font-style: italic;
}

.green {
  color: green;
}
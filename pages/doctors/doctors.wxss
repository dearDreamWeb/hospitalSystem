.main {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.date-main {
  display: flex;
  flex-wrap: wrap;
}

.date-item {
  width: 22%;
  margin-right: calc(12% / 4);
  text-align: center;
  padding: 10rpx 8rpx;
  margin-bottom: 12rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 16rpx;
  color: #3c3c3c;
}

.date-selected {
  background-color: rgb(245, 92, 37);
  color: #fff;
  transition: all 0.3s ease-in;
}

.title {
  position: relative;
  display: inline-block;
  font-size: 40rpx;
  padding: 12rpx 12rpx;
  margin-bottom: 24rpx;
  text-shadow: 1px 3px 2px #bfbdbd;
}

.date-text {
  font-size: 24rpx;
}

.docotr-item {
  display: flex;
  margin-bottom: 24rpx;
  padding: 12rpx 8rpx;
  background-color: #fff;
}

.avatar {
  margin-right: 24rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #eee;
}

.desc-main {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.desc-top {
  display: flex;
  align-items: center;
}

.desc-top :nth-child(n) {
  margin-right: 24rpx;
}

.desc-department,
.desc-specialty {
  font-size: 24rpx;
}

.desc-specialty {
  color: #c5c4c4;
}
.doctor-main {
  padding: 20rpx;
}

.date-main {
  display: flex;
  flex-wrap: wrap;
}

.date-item {
  width: 22%;
  margin-right: calc(12% / 4);
  text-align: center;
  padding: 10rpx 8rpx;
  margin-bottom: 12rpx;
  box-sizing: border-box;
  background-color: #eee;
  border-radius: 16rpx;
  color: #3c3c3c;
}

.date-selected {
  background-color: rgb(245, 92, 37);
  color: #fff;
  transition: all 0.3s ease-in;
}

.title {
  position: relative;
  display: inline-block;
  font-size: 36rpx;
  padding: 12rpx 12rpx;
  margin-bottom: 24rpx;
  text-shadow: 1px 3px 2px #bfbdbd;
}

.docotr-item {
  display: flex;
  margin-bottom: 24rpx;
  padding: 12rpx 8rpx;
  background-color: #eee;
}

.avatar {
  margin-right: 24rpx;
  width: 100rpx;
  height: 100rpx;
}
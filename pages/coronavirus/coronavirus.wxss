.notice-main{
  background-color: #eee;
  min-height: 100vh;
}
.situation-title {
  font-size: 24px;
  padding: 12px 8px;
}
.notice-content{
  padding: 0 8px;
  background-color: #fff;
}
.title-second{
  font-size: 20px;
}
.statistics-main{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  text-align: center;
}
.statistics-item{
  margin: 8px 0;
  margin-right: calc(10% / 3);
  width: 30%;
  border-radius: 5px;
}
.statistics-item:nth-of-type(1n){
  background-color: #f40;
}
.statistics-item:nth-of-type(2n){
  background-color: rgb(10, 212, 20);
}
.statistics-item:nth-of-type(3n){
  background-color: rgb(26, 99, 236);
}
.statistics-title{
  color: #fff;
}
.statistics-count{
  color: #eee;
}

.news-main{
  font-size: 16px;
  color: #323269;
  margin-top: 8px;
}
.news-footer{
  display: flex;
  font-size: 12px;
}
.footer-date{
  margin-right: 12px;
}